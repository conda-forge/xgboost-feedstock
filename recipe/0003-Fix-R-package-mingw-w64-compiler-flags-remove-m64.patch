 1 files changed, 7 insertions(+), 2 deletions(-)

diff --git a/make/mingw64.mk b/make/mingw64.mk
index e20220b..7895c45 100644
--- a/make/mingw64.mk
+++ b/make/mingw64.mk
@@ -6,8 +6,13 @@
 #
 # see config.mk for template.
 #-----------------------------------------------------------
-export CXX=g++ -m64
-export CC=gcc -m64
